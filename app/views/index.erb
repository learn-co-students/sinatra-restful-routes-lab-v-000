<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Recipes</title>
  </head>
  <body>
    <h1>RECIPES</h1>
    <%@recipes.each do |recipe|%>
    <h2><%=recipe.name%></h2>
    <p><%=recipe.ingredients%></p>
    <p><%=recipe.cook_time%></p>
    <a href="/recipes/<%=recipe.id%>">Link</a>
    <%end%>
      </body>
</html>
