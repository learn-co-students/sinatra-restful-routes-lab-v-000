<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Recipes</title>
  </head>
  <body>
    <h1>All Recipes</h1>
    <% @recipes.each_with_index do |recipe, i| %>
    <p>
      <h2>Recipe #<%="#{ i + 1}"%> Name: <%= recipe.name %></h2>
      <a href="/recipes/<%="#{recipe.id}"%>">See details</a>
    </p>
    <% end %>
  </body>
</html>
