<h1>Your Recipes</h1>

<% @recipes.each do |recipe| %>
  <h2><em><%= recipe.name %></em></h2>
  <a href="/recipes/<%= recipe.id %>">Go to recipe page</a>
<% end %>

<p>
  <a href="/recipes/new"><button>Create a new recipe</button></a>
</p>

