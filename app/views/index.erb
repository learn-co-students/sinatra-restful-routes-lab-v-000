<% @recipes.each do |recipe| %>
  <p>Recipe Name:</p>
  <p><%= recipe.name %></p>
  <p>Recipe Ingredients:</p>
  <p><%= recipe.ingredients %></p>
  <p>Recipe Cook Time:</p>
  <p><%= recipe.cook_time %></p>
  <p>Link to this recipe's page:</p>
  <p><a href="/recipes/<%= "#{recipe.id}" %>"><%= recipe.name %></a></p>
<% end %>