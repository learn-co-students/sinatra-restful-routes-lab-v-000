<p>Hello World! Here's a list of recipes:</p>
<% if @recipes %>
  <% @recipes.each do |recipe| %>
    <h1><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></h1>
    <p><%= recipe.ingredients %></p>
    <p><%= recipe.cook_time %></p>
  <% end %>
<% end %>

<a href="/recipes/new">Create a new recipe</a>
