<h1>Welcome to Your Recipe Box</h1>
<div class="row">
  <% @recipes.each do |recipe| %>
  <p><a href="/recipes/<%= recipe.id %>">Name: <%= recipe.name %></a></p>
  <p>Ingredients: <%= recipe.ingredients %></p>
  <p>Cook time <%= recipe.cook_time %></p>
  <hr>
  <% end %>
</div>
<div class="row col-md-6">
  <a class="btn btn-default" href="recipes/new" role="button">Create New Recipe</a>
</div>
