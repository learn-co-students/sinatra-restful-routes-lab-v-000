<form action="/recipes/<%=@recipe.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2><%=@recipe.name%>:<input type="text" name="name"></h2><br>
  <h2><%=@recipe.ingredients%>:<input type="text" name="ingredients"></h2><br>
  <h2><%=@recipe.cook_time%><input type="text" name="cook_time"></h2><br>
  <input type="submit" name="submit" value="submit" id="submit">
</form>
