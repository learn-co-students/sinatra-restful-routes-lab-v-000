<h2>Edit Recipe: <%= @recipe.name %></h2>
<% fields = ["name", "ingredients", "cook_time"] %>
<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <% fields.each do |field| %>
    <% field_name = field.split("_").map{|w| w.capitalize}.join(" ")%>
    <p>
      <label for="<%= field %>"><%= field_name %>: </label>
      <input type="text" id="<%= field %>" name="recipe[<%= field %>]" value="<%= @recipe.send(field) %>">
    </p>
  <% end %>
  <p>
    <input type="submit" value="submit">
  </p>
</form>
