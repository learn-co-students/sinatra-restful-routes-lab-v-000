
<h2><%= @recipe.ingredients %></h3>

<form method="post" action="/recipes/<%= @recipe.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">
<label for="name">Recipe Name: <input id="name" type="text" name="name"></label>
<label for="ingredients">Ingredients: <input id="ingredients" type="text" name="ingredients"></label>
<label for="cook_time">Recipe Cook Time: <input id="cook_time" type="text" name="cook_time"></label>
<input type="submit" value="submit">
</form>
