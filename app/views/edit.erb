<h2><%=@recipe.name%></h2>
<p><%=@recipe.ingredients%></p>
<p><%=@recipe.cook_time%></p>

<h4>Edit Recipe</h4>
<form method="post" action="/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name: <input type="text" name="recipe_name"></label><br>
  <label>Ingredients: <input type="text" name="ingredients_names"></label><br>
  <label>Cook Time: <input type="text" name="cook_time"></label><br>
  <input type="submit" value="submit">
</form>