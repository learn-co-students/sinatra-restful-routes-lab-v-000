<%= @recipe.name %>

<form action="/recipes/<%= @recipe.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
      Name Update: <input type="text" name="name" value="<%= @recipe.name%>">
      Ingredients Update: <input type="text" name="ingredients" value="<%= @recipe.ingredients%>">
      Cook Time Update: <input type="text" name="cook_time" value="<%= @recipe.cook_time%>">
      
     <input type="submit" id="Submit">
</form>
