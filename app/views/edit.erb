<h2>Edit "<%=@recipe.name%>"</h2>
<form action="/recipes/<%=@recipe.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="name">Name of Recipe: </label>
  <input id="name" type="text" name="name" value="<%=@recipe.name%>"><br>
  <label for="ingredients">Ingredients: </label>
  <input id="ingredients" type="text" name="ingredients" value="<%=@recipe.ingredients%>"><br>
  <label for="cook_time">Cook time: </label>
  <input id="cook_time" type="text" name="cook_time" value="<%=@recipe.cook_time%>"><br>
  <input type="submit" value="submit">
</form>
