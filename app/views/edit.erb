<html>
<head>
  <title>Edit Recipe</title>
</head>
<body>

  <h1>Edit Recipe</h1>

  <form method="POST" action="/recipes/<%= @recipe.id %>">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <label for="recipe_name">Recipe Name:    </label>
    <input type="text" name="recipe_name" value="<%= @recipe.name %>">

    <label for="ingredients_names">Ingredients:    </label>
    <input type="text" name="ingredients_names" value="<%= @recipe.ingredients %>"></input>

    <label for="cook_time">Cooking Time:    </label>
    <input type="text" name="cook_time" value="<%= @recipe.cook_time %>">

    <input type="submit" value="submit">
  </form>

</body>
</html>