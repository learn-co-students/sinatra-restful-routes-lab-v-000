

    <h1>Edit A Recipe</h1>
<%= @recipe.name %>
<%= @recipe.ingredients %>
<%= @recipe.cook_time %>

<form action="/recipes/<%= @recipe.id %>" method="post"> <!-- must be a dynamic id -->
  <input id="hidden" type="hidden" name="_method" value="patch">

Name  <input type="text" name="name" value = "<%=@recipe.name %>"><br>
  Ingredients <input type="text" name="ingredients" value = "<%=@recipe.ingredients %>"><br>
  Cook Time<input type="text" name="cook_time" value = "<%=@recipe.cook_time %>">
  <input type="submit" value="submit">
</form>
