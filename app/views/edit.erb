<h2>Edit Recipe #<%= @recipe.id %></h2>

<form action="/recipes/<%= @recipe.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name: <input type="type" name="name" value="<%= @recipe.name %>">
  <br>
  Ingredients: <input type="type" name="ingredients" value="<%= @recipe.ingredients %>">
  <br>
  Cook Time: <input type="type" name="cook_time" value="<%= @recipe.cook_time %>">
  <input type="submit" value="submit">
</form>