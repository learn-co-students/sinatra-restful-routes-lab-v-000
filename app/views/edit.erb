<body>
  <h1><%= @recipe.name %></h1>
  <p><%= @recipe.ingredients %></p>
  <p><%= @recipe.cook_time %></p>
  <form action="/recipes/<%= @recipe.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <p>Recipe Name: <input type="text" name="name" id="recipe"></p>
    <p>Recipe Ingredients: <input type="text" name="ingredients" id="recipe"></p>
    <p>Recipe Cook Time: <input type="text" name="cook_time" id="recipe"></p>

    <input type="submit" id="submit">
  </form>
</body>
