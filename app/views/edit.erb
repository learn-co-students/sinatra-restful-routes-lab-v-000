<form method="POST" action='/recipes/<%= @recipe.id %>'>
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Title: <input type="text" name="name"><%= @recipe.name %></p>
  <p>Content: <input type="text" name="ingredients"> <%= @recipe.ingredients%></p>
  <p>Content: <input type="text" name="cook_time"> <%= @recipe.cook_time%></p>
  <input type="submit" value="submit">
</form>
