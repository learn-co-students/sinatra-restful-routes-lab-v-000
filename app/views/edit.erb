<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Name: <input type='text' value="<%= @recipe.name %>" name='name'></p>
  <p>Ingredients: <input value="<%= @recipe.ingredients %>" type='text' name='ingredients' ></p>
  <p>Cook Time: <input value="<%= @recipe.cook_time %>" type='text' name='cook_time'></p>
  <input type="submit" value="submit">
</form>
