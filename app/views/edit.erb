<form action="/recipes/<%=@r.id%>/edit" method="post">
  <input type="text" name="name" placeholder="<%=@r.name%>">
  <input type="text" name="ingredients" placeholder="<%=@r.ingredients%>">
  <input type="text" name="cook_time" placeholder="<%=@r.cook_time%>">
