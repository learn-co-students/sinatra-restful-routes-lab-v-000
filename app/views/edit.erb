<h1>Hi there,</h1>
<h2>You want to update your recipe? No worry</h2>
<h3>Let's do it.</h3>
<form class="" action="/recipes/<%=@recipe.id%>" method="post">
   <input id="hidden" type="hidden" name="_method" value="patch">
   <label for="name">Recipe Name:</label>
   <input type="text" name="name" value="<%=@recipe.name%>">
   <label for="ingredients">Ingredients:</label>
   <input type="text" name="ingredients" value="<%=@recipe.ingredients%>">
   <label for="cook_time">Cook Time:</label>
   <input type="text" name="cook_time" value="<%=@recipe.cook_time%>">
   <input type="submit" name="submit" value="submit">
</form>
