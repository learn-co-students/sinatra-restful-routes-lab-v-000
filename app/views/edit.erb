<!DOCTYPE html>
<form action='/recipes/<%= @recipes.id %>' method='post'>
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type='text' name='recipe_name' placeholder="<%= @recipes.name %>">
  <input type='text' name='ingredients_names' placeholder="<%= @recipes.ingredients %>">
  <input type='text' name='cook_time' placeholder="<%= @recipes.cook_time %>">
  <input type="submit" value="submit">
</form>
