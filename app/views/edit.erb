<form method="post" action="/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2>Recipe Name:<input type="text" name="name">(currently <%= @recipe.name %>)</h2>
  <p>Ingredients: <input type="text" name="ingredients">(currently <%= @recipe.ingredients %>)</p>
  <p>Cook for: <input type="integer" name="cook_time"> minutes (currently <%= @recipe.cook_time %>)</p>
  <input type="submit" value="submit">
</form>
