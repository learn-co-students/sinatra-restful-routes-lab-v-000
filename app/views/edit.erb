<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <form action="/recipes/<%= @recipe.id %>/edit" method="POST">
      <input id="hidden" type="hidden" name="_method" value="patch">
      <p><input type="text" name="name" value="<%= @recipe.name %>"></p>
      <p><input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></p>
      <p><input type="text" name="cook_time" value="<%= @recipe.cook_time %>"></p>
      <p><input type="submit" value="submit"></p>
    </form>
  </body>
</html>
