<h1>Edit Your Recipe</h1>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name</label>
  <input id="recipe_name" type="text" value="<%=@recipe.name%>" name="name"><br>
  <label>Ingredients</label>
  <input id="ingredients_names" type="text" value="<%=@recipe.ingredients%>" name="ingredients"><br>
  <label>Cook Time</label>
  <input id="cook_time" type="text" value="<%=@recipe.cook_time%>" name="cook_time"><br>
  <input type="submit" value="submit">
</form>
