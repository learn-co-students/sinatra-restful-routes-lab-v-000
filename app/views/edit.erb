<h1>This is your <%= @recipe.name %></h1>
<h3><%= @recipe.ingredients %></h3>
<h3><%= @recipe.cook_time %></h3>

<h1>Edit your Recipe!</h1>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <h3>Recipe name: <input type="text" name="name"></h3>
  <h4>Recipe ingredients: <input type="text" name="ingredients"></h4>
  <h4>Recipe cook time: <input type="integer" name="cook_time"></h4>
  <input type="submit" value="submit" />
</form>
