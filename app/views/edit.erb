<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="name">Recipe Name: <input type="text" name="name" value="<%= @recipe.name %>"></label><br><br>
  <label for="ingredients"> Ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></label><br><br>
  <label for="cook_time"> Cook Time: <input type="text" name="cook_time" value="<%= @recipe.cook_time %>"></label><br><br>
  <input type="submit" value="submit">
</form>
