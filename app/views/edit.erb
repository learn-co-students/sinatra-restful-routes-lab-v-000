Recipe Name: <%= @recipe.name %><br>
Ingredients: <%= @recipe.ingredients %><br>
Cook Time: <%= @recipe.cook_time %><br>

<br>
<form method="post" action="/recipes/<%= @recipe.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name: <input type="text" value="<%= @recipe.name %>" name="name"><br>
  Ingredients: <input type="text" value="<%= @recipe.ingredients %>" name="ingredients"><br>
  Cook Time: <input type="text" value="<%= @recipe.cook_time %>" name="cook_time"><br>
  <input type="submit" value="submit">
</form>
