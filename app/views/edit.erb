<h2>Edit Your Recipe:</h2>

<form method="post" action="/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="name">Recipe Name: </label><input type="text" name="name" value="<%=@recipe.name%>">
  <label for="cook_time">Cook Time: </label><input type="text" name="cook_time" value="<%=@recipe.cook_time%>">
  <label for="ingredients">Ingredients List: </label><input type="text" name="ingredients" value="<%=@recipe.ingredients%>">
  <input type="submit" value="submit">
</form>
