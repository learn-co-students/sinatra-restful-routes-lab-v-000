<h1>Here is your recipe</h1>
<br>
<div class="recipe">
  <h2><%= @recipe.name %></h2>
  <ul>
    <li>Ingredients: <%= @recipe.ingredients %></li>
    <li>Cook Time: <%= @recipe.cook_time %></li>
  </ul>
</div>
<div class="form">
  <h2>Edit your recipe</h2>
  <form method="post" action="/recipes/<%= @recipe.id %>/edit">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Name: <input type="text" name="name"></label><br>
    <label>Ingredients: <input type="text" name="ingredients"></label><br>
    <label>Cook Time: <input type="text" name="cook_time"></label><br><br>
    <input type="submit" value="submit">
  </form>
</div>
