<h3>Edit your recipe below:</h3>
<form method="POST" action="/recipes/<%= @recipe.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="text" placeholder=<%= @recipe.name %> name="name"></br>
  <input type="text" placeholder=<%= @recipe.ingredients %> name="ingredients"></br>
  <input type="text" placeholder=<%= @recipe.cook_time %> name="cook_time"></br>
  <input type="submit" value="submit">
</form>