 <h1>Edit Recipe</h1>

<form method = "post" action = "/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value ="patch">
  <h3>Name<input id = "recipe_name" type = "text" name = "name" value ="<%=@recipe.name%>"></h3>
  <h3>Ingredients<input id = "ingredients_names" type = "text" name = "ingredients" value ="<%=@recipe.ingredients%>"></h3>
  <h3>Cook Time<input id = "cook_time" type = "text" name = "cook_time" value ="<%=@recipe.cook_time%>"></h3>
  <input type = "submit" value = "submit">
</form>
