<h1>Edit Recipe</h1>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="name">Edit Recipe Name:</label>
  <input type="text" name="name" value="<%= @recipe.name %>">
  <label for="ingredients">Edit Recipe Ingredients:</label>
  <input type="text" name="ingredients" value="<%= @recipe.ingredients %>">
  <label for="cook_time">Edit Recipe Cook Time:</label>
  <input type="text" name="cook_time" value="<%= @recipe.cook_time %>">
  <input type="submit" name="submit" value="submit">
</form>
