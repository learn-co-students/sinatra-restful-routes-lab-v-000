<h1>Edit Recipe</h1>

<form method="post" action="/recipes/<%=@recipe.id%>/edit">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name: <input type="text" name="name" value="<%=@recipe.name%>">
  Ingredients: <input type="text" name="ingredients" value="<%=@recipe.ingredients%>">
  Cook Time: <input type="number" name="cook_time" value="<%=@recipe.cook_time%>"> minutes

  <input type="submit" value="submit">
</form>

