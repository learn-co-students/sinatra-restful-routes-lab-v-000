<h1>edit</h1>
<form action="/recipes/<%= @recipe.id %>" method="post">
	<input id="hidden" type="hidden" name="_method" value="patch">
	<p>Name: <input type="text" value="<%= @recipe.name %>" name="recipe_name"></p>
	<p>Ingredients: <input type="text" value="<%= @recipe.ingredients %>" name="ingredients_names"></p>
	<p>Cook Time: <input type="text" value="<%= @recipe.cook_time %>" name="cook_time"></p>
	<input type="submit" value="submit">
</form>