<h3>Edit Recipe <%=@recipe.id%></h3>
<form action="/recipes/<%=@recipe.id%>/edit" method="POST">
  <input type="text" name="name" placeholder="edit name:">
  <p>current ingredients: <%=@recipe.ingredients%></p>
  <input type="text" name="ingredients" placeholder="edit Ingredients:">
  <input type="text" name="cook_time" placeholder="edit Cook Time:">
  <input type="submit" value="submit">
  <input id="hidden" type="hidden" name="_method" value="patch">
</form>
