<h1>Edit recipe</h1>

<form class="recipe-form" action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p><label for="name">Recipe Name: </label></p>
  <p><input type="text" name="name" id="name" value="<%= @recipe.name %>"></p>
  <p><label for="ingredients">Ingredients:</label></p>
  <p><input type="text" name="ingredients" id="ingredients" value="<%= @recipe.ingredients %>"></p>
  <p><label for="cook_time">Cook Time:</label></p>
  <p><input type="text" name="cook_time" id="cook_time" value="<%= @recipe.cook_time %>"></p>
  <p><input type="submit" name="" value="submit"></p>
</form>
