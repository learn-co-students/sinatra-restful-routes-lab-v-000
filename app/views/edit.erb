<form method="POST" action="/recipes/<%= @recipe.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2>Recipe Name:<input type="text" name="name" value="<%= @recipe.name %>"></h2><br>
  <h2>Recipe Ingredients:<input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></h2><br>
  <h2>Recipe Cook Time:<input type="text" name="cook_time" value="<%= @recipe.cook_time %>"></h2><br>
  <input type="submit" id="submit" value="submit" name="submit">
</form>
