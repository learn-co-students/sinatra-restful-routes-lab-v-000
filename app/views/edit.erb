<form method="POST" action="/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Update Name:<input type="text" name="name" value="<%=@recipe.name%>"></p>
  <p>Update Ingredients:<input type="text" name="ingredients" value="<%=@recipe.ingredients%>"></p>
  <p>Update Cook Time:<input type="text" name="cook_time" value="<%=@recipe.cook_time%>"></p>
  <input type="submit" value="submit">
</form>