<form method="post" action="/recipes/<%=@recipe.id%>">

  <input id="hidden" type="hidden" name="_method" value="patch">

  <h2>Name: <input id="recipe_name" type="text" value="<%=@recipe.name%>" name="name"></h2>
  <p>Ingredients: <input id="ingredients_names" type="text" value="<%=@recipe.ingredients%>" name="ingredients"></p>
  <p>Cook Time: <input id="cook_time" type="text" value="<%=@recipe.cook_time%>" name="cook_time"></p>

  <input type="submit" value="submit">

</form>
