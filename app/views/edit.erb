<h1> Title: <%= @recipe.name %> </h1>
<h4> Ingredients: <%= @recipe.ingredients %> </h4>
<h4> Cook Time: <%= @recipe.cook_time %> minutes </h4>

<form action="/recipes/<%= @recipe.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="name">Name: <input type="text" name="name" value="<% @recipe.name %>"></label>
  <label for="ingredients">Ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients"></label>
  <label for="cook_time">Cook Time: <input type="text" name="cook_time" value="<%= @recipe.cook_time"></label>
  <input type="submit" value="submit">
</form>
