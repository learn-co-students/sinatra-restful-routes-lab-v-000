<h2>Edit Recipe</h2>
<form method="post" action="/recipes/<%= @recipe.id %>/edit">
<input id="hidden" type="hidden" name="_method" value="patch">
<label for="name">Name: </label>
<input type="text" name="name" value="<%= @recipe.name %>"/><br/><br/>
<label for="ingredients">Ingredients: </label>
<input type="text" name="ingredients" value="<%=  @recipe.ingredients %>" /><br/><br/>
<label for="cook_time">Cook Time: </label>
<input type="text" name="cook_time" value="<%= @recipe.cook_time %>"/><br/><br/>
<input type="submit" value="submit" name="submit" />
</form>

<form action="/recipes/<%= @recipe.id %/delete>" method="post">
<input id="hidden" type="hidden" name="_method" value="delete">
<input type="submit" value="delete" name="delete" />
</form>
