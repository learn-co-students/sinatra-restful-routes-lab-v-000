
<form method='POST' action='/recipes/<%= @recipe.id %>'>
  <input id="hidden" type="hidden" name="_method" value="patch">
  Edit: <input type='text' name='name' placeholder="<%= @recipe.name %>">
  Ingredients: <input type='text' name='ingredients' placeholder='<%= @recipe.ingredients %>'>
  Cook Time: <input type='text' name='cook_time' placeholder='<%= @recipe.time_cook %>'>
  <input type='submit' id='submit'>
</form>
