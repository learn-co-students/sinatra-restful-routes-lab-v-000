<form action="/recipes/<%= @recipe.id %>" method="POST">
    <input type="hidden" type="hidden" name="_method" value="patch">

    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="<%= @recipe.name %>"><br>

    <label for="ingredients">Ingredients</label>
    <input type="text" id="ingredients" name="ingredients" value="<%= @recipe.ingredients %>"><br>

    <label for="cook_time">Cook Time</label>
    <input type="text" name="cook_time" id="cook_time" value="<%= @recipe.cook_time %>"><br>

    <input type="submit" value="submit">
</form>