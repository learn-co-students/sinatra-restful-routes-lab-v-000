<h1>Edit a Recipe</h1>
<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <strong>Name: </strong><input id="recipe_name" type="text" name="name" value="<%=@recipe.name%>">
  <strong>Ingredients: </strong><input id="ingredients_names" type="text" name="ingredients" value="<%=@recipe.ingredients%>">
  <strong>Cook Time: </strong><input id="cook_time" type="text" name="cook_time" value="<%=@recipe.cook_time%>">
  <input type="submit" value="submit">
</form>
