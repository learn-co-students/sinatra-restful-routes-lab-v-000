<form method="POST" action="/recipes/<%=@recipe.id%>">
	<h1>Edit Existing Recipe!</h1>
	<input id="hidden" type="hidden" name="_method" value="patch">
	<input type="text" name="recipe_name" value="<%=@recipe.name%>"></input>
	<input type="text" name="ingredients_names" value="<%=@recipe.ingredients%>"></input>
	<input type="text" name="cook_time" value="<%=@recipe.cook_time%>"></input>
	<input type="submit" value="submit">
</form>