<head>
  <style media="screen">
    label {
      margin-top: 1em;
      display: block;
    }
  </style>
</head>

<h1>Edit Recipe</h1>
<%= @recipe.ingredients %>

<form method="post" action="/recipes/<%= @recipe.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Name:</label><input type="text" name="name" placeholder="<%=@recipe.name%>" value="<%=@recipe.name%>">

  <label>ingredients:</label><input type="text" name="ingredients" placeholder="<%=@recipe.ingredients%>" value="<%=@recipe.ingredients%>">

  <label>cook_time:</label><input type="text" name="cook_time" placeholder="<%=@recipe.cook_time%>" value="<%=@recipe.cook_time%>">

  <input type="submit" value="submit">
</form>
