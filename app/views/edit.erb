
<h1>Editing '<%= @recipe.name %>'</h1>

<p>Original Recipe: <%= @recipe.ingredients %> </p>
<p>Original Cook Time: <%= @recipe.cook_time %> minutes</p>

<form action="/recipes/<%=@recipe.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <input type="text" name="name" placeholder="new recipe name">
  <input type="text" name="ingredients" placeholder="new ingredients">
  <input type="text" name="cook_time" placeholder="new cook time">

  <input type="submit" value="submit">
</form>
