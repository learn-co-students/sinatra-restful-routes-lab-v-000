<form method="post" action="/recipes/<%= @recipe.id%>">
	<label>Recipe Name: </label>
	<input type="text" name="name" id="name" value="<%= @recipe.name %>"><br>
	<label>Recipe Ingredients: </label>
	<input type="text" name="ingredients" id="ingredients" value="<%= @recipe.ingredients %>"><br>
	<label>Recipe Cook Time: </label>
	<input type="text" name="cook_time" id="cook_time" value="<%= @recipe.cook_time %>">
	<input id="hidden" type="hidden" name="_method" value="patch">
	<input type="submit" value="submit">
	</form>
	
</form>