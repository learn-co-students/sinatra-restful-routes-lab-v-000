<h1>Edit a recipe</h1>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for "name">Recipe name: </label>
  <input type="text" id="name" name="name" value="<%= @recipe.name %>">
  </br>
  <label for="ingredients">Ingredients: </label>
  <input type="text" id='ingredients' name="ingredients" value="<%= @recipe.ingredients %>">
  </br>
  <label for="cook_time">cook_time: </label>
  <input type="text" id='cook_time' name="cook_time" value="<%= @recipe.cook_time %>">
  </br>


  <button type="submit" value="submit">Submit</button>
</form>
