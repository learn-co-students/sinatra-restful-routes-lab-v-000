<h1>Edit Your Recipe</h1>

<form method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" value="<%=@current_recipe.name%>">
  <label for="ingredients">ingredients:</label>
  <input type="text" id="ingredients" name="ingredients" value="<%=@current_recipe.ingredients%>">
  <label for="cook_time">Cook Time:</label>
  <input type="text" id="cook_time" name="cook_time" value="<%=@current_recipe.cook_time%>">
  <input type="submit" id="submit">
</form>