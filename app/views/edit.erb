<form action="/recipes/<%= @recipe.id %>" method="post">
  <h2>Recipe</h2>
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="name">Name:</label><br>
  <input id="name" type="text" name="name" value="<%= @recipe.name %>"/><br>
  <label for="ingredients">Ingredients:</label><br>
  <input id="ingredients" type="text" name="ingredients" value="<%= @recipe.ingredients %>"/><br>
  <label for="cook_time">Cook Time:</label><br>
  <input id="cook_time" type="text" name="cook_time" value="<%= @recipe.cook_time %>"/><br><br>
  <input type="submit" value="submit">
</form>
