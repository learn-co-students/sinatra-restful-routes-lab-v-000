<h1><%=  @recipe.name %></h1>
<h2>Ingredients: <%=  @recipe.ingredients %></h2>
<h2>Cook Time: <%=  @recipe.cook_time %></h2>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2>NAME: <input type="text" name="name"></h2>
  <h2>INGREDIENTS: <input type="text" name="ingredients"></h2>
  <h2>COOK TIME: <input type="text" name="cook_time"></h2>
  <h2><input type="submit" value="submit"></h2>
</form>
