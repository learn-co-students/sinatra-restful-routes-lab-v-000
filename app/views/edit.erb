<!-- Page to edit a recipe -->

<h1>Edit Recipe </h1>

<form method="post" action="/recipes/<%=@recipe.id%>">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <p>Current recipe Name: <%=@recipe.name%></p>
    <p>Current ingredients: <%=@recipe.ingredients%></p>
    <p>Current cook time: <%=@recipe.cook_time%></p>

    <p>Updated Recipe Name: <input type="text" name="name"/></p>
    <p>Updated ingredients: <textarea type="text" name="ingredients"></textarea></p>
    <p>Updated cook time: <input type="text" name="cook_time"/></p>

    <p><input type="submit" value="submit"></p>
</form>
