<form action="/recipes/<%=@recipe.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <%=@recipe.name%> <input id="name" type="text" name="name" placeholder="name:">
  <%=@recipe.ingredients%> <input id="ingredients" type="text" name="ingredients" placeholder="ingredients:">
  <%=@recipe.cook_time%> <input id="cook_time" type="text" name="cook_time" placeholder="cook_time:">
  <input type="submit" value="submit">
</form>