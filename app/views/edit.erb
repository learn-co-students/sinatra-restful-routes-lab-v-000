<form method="post" action="/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name <input id="recipe_name "type="text" name="name" value="<%=@recipe.name%>">
  Ingredients <input id="ingredients_name" type="text" name="ingredients" value="<%=@recipe.ingredients%>">
  Cook Time <input id="cook_time" type="text" name="cook_time" value=" <%=@recipe.cook_time%>">
  <input type="submit" value="submit">

</form>
