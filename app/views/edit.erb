
<h1>Edit <%= @recipe.name %> </h1>
<form action= '/recipes/<%= @recipe.id %>' method= 'post'>
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p> Name: <input type="text" id="name" name= "name" value= "<%= @recipe.name %>"></p>
  <p> Content: <input type="text" id= "content" name="ingredients"value= "<%= @recipe.ingredients %>"></p>
   <p> Cook Time: <input type="text" id= "cook_time" name="cook_time" value= "<%= @recipe.cook_time %>"></p>
  <input type= "submit" id="submit">
</form>