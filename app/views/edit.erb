<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="text" name="name" placeholder="<%= @recipe.name %>"></input>
  <input type="text" name="ingredients" placeholder="<%= @recipe.ingredients %>"></input>
  <input type="text" name="cook_time" placeholder="<%= @recipe.cook_time %>"></input>
  <input type="submit" value="submit"></input>
</form>
