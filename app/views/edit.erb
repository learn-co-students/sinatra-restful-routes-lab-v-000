<form method="post" action="/recipes/<%= @recipes.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name: <input type="text" value="<%= @recipes.name %>" name="name">
  Ingredients: <input type="text" value="<%= @recipes.ingredients %>" name="ingredients"> 
  Cook Time: <input type="text" value="<%= @recipes.cook_time %>" name="cook_time">
  <input type="submit" value="submit">
</form>