<form method="post" action="/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  New Name<input id="name" type="text" value="<%=@recipe.name%>" name="name">
  New Ingredients<input id="ingredients" type="text" value="<%=@recipe.ingredients%>" name="ingredients">
  New Cook Time<input id="cook_time" type="text" value="<%=@recipe.cook_time%>" name="cook_time">
  <button type="submit" value="submit">Submit</button>
</form>
