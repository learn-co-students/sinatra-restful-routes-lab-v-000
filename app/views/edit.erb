<h1>Edit Recipe Number <%= @recipe.id %></h1>

<p>Name: <%= @recipe.name %></p>
<p>Ingredients: <%= @recipe.ingredients %></p>
<p>Cook Time: <%= @recipe.cook_time %></p>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <p><input type="text" name="name" placeholder="New Name"></p>
  <p><input type="text" name="ingredients" placeholder="New Ingredients"></p>
  <p><input type="text" name="cook_time" placeholder="New Cook Time"></p>

  <input type="submit" name="submit" value="submit">
  <input id="hidden" type="hidden" name="_method" value="patch">
</form>
