<form method="post" action="/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name:<input type="name" value="<%=@recipe.name%>" name="name"></br>
  Ingredients: <input type="ingredients" value="<%=@recipe.ingredients%>" name="ingredients"></br>
  Cook Time:<input type="cook_time" value="<%=@recipe.cook_time%>" name="cook_time"></br>
  <input type="submit" value="submit">
</form>
