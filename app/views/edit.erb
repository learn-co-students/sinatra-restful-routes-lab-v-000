<h1>Please edit the recipe details below:</h1>

<form action='/recipes/<%=@recipe.id%>' method="POST">
	<input id="hidden" type="hidden" name="_method" value="patch">
	<strong>Recipe Name: <%= @recipe.name %></strong>
	<input type="text" name="name" placeholder="Recipe Name">
	<strong>Ingredients: <%= @recipe.ingredients %></strong>
	<input type="text" name="ingredients" placeholder="Ingredients">
	<strong>Cook Time: <%= @recipe.cook_time %></strong>
	<input type="text" name="cook_time" placeholder="Cook Time">
	<input type="submit" value="submit">

</form>
