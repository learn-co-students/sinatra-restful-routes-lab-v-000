<h1>Recipe to Change:</h1>
<ul>
    <li>Recipe: <%=@recipe.name%></li>
    <li>Cook Time: <%=@recipe.cook_time%></li>
    <li>Ingredients: <%=@recipe.ingredients%></li>
</ul>

<form action="/recipes/<%= @recipe.id %>" method="post">
        <input id="hidden" type="hidden" name="_method" value="patch">
        <p><label for "name">Recipe Name:</label>
        <input type="text" name="name"></p>
        <p><label for "cook_time">Cook Time:</label>
        <input type="text" name="cook_time"></p>
        <p><label for "ingredients">Ingredients:</label>
        <input type="text" name="ingredients"></p>
        <input type="submit" id="button" value="submit">
</form>