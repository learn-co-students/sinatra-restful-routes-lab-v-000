<h1>Edit Recipe</h1>
<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p><label>Name: </label><input type="text" name="name" value="<%= @recipe.name %>"></p>
  <p><label>Ingredients: </label><input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></p>
  <p><label>Cook Time: </label><input type="text" name="cook_time" value="<%= @recipe.cook_time %>"></p>
  <input type="submit" id="submit">
</form>