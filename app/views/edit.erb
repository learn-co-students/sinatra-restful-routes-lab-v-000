

<form method="post" action="/recipes/<%= @recipe.id %>" >
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input id="recipe_name" type='text' name='name' value = '<%= @recipe.name %>'>
  <input id="ingredients_names" type='text' name='ingredients' value = '<%= @recipe.ingredients %>'>
  <input id="cook_time" type='text' name='cook_time' value = '<%= @recipe.cook_time %>'>
  <input type="submit" value="submit">
</form>


