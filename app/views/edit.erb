<form method="post" action="/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p> Recipe Name: <%=@recipe.name%> <input type="text" name="name"></p>
  <p> Ingredients Needed: <%=@recipe.ingredients%> <input type="text" name="ingredients"></p>
  <p> Cooktime: <input type="text" name="cook_time"></p>
  <input type="submit" value="submit">
</form>
