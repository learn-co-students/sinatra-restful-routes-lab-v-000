



<h2> <%= @recipe.name %></h2>

<h2> <%= @recipe.ingredients %></h2>

<h2> <%= @recipe.cook_time %> minutes</h2>



<form action="/recipes/<%=@recipe.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name: <input type="string" name="name">
  Ingredients: <input type="string" name="ingredients">
  Cook Time: <input type="integer" name="cook_time">
  <input type="submit" value="submit" id="patch">
</form>




