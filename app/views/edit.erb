<form action="/recipes/<%=@recipe.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <p><label for="name">Name: </label><input type="text" name="name" id="name" value="<%=@recipe.name%>"></p>
  <p><label for="ingredients">Ingredients: </label><input type="text" name="ingredients" id="ingredients" value="<%=@recipe.ingredients%>"></p>
  <p><label for="cook_time">Cook Time: </label><input type="text" name="cook_time" id="cook_time" value="<%=@recipe.cook_time%>"></p>

  <input type="submit" value="submit">
</form>
