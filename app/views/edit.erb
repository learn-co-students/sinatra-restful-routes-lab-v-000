<form action="/recipes/<%=@recipe.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h1>Recipe Name:<input type="text" name="name" value="<%= @recipe.name %>"></h1>
  <h1>Ingredients:<input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></h1>
  <h1>Cook Time:<input type="text" name="cook_time" value="<%= @recipe.cook_time %>"></h1>
  <input type="submit" name="submit" value="submit" id="submit">

</form>
