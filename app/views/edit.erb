<form method="post" action="/recipes/<%= @recipe.id %>">
  <h1>Current Recipe for <%= @recipe.name %></h1>
    <h2>Ingredients: <%= @recipe.ingredients %></h2>
    <h2>Start to Finish: <%= @recipe.cook_time %></h2>
  <h1>Edit Recipe:</h1>
    <input id="hidden" type="hidden" name="_method" value="patch">
    <h1>Name of Recipe: <input type="text" name="name" value="<%= @recipe.name %>"></h1>
    <h2>Ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></h2>
    <h2>Cook Time (start to finish): <input type="text" name="cook_time" value=" <%= @recipe.cook_time %>"></h2>
    <input type="submit" value="submit">
</form>
