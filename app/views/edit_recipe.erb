<form method="post" action="/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2>Name: <input id="recipe_name" type="text" value="<%=@recipe.name%>" name="name"></h2><br>
  <h2>Ingredients: <input id="ingredients_names" type="text" value="<%=@recipe.ingredients%>" name="ingredients"></h2><br>
  <h2>Cook Time: <input id="cook_time" type="text" value="<%=@recipe.cook_time%>" name="cook_time"></h2><br>
  <input type="submit" value="submit">
</form>
