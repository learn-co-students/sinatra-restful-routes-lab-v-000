<h1><%= Recipe.find(@id).name %></h1>
<p>Ingredients: <%= Recipe.find(@id).ingredients %></p>
<p>Cook Time: <%= Recipe.find(@id).cook_time %></p>

<form action="/recipes/<%= @id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label> New Name of Recipe</label><br>
  <input type="text" name="name"><br>
  <label> New Ingredients for Recipe</label><br>
  <input type="text" name="ingredients"><br>
  <label> New Cook Time for Recipe</label><br>
  <input type="text" name="cook_time"><br>
  <input type="submit" value="submit">
</form>
