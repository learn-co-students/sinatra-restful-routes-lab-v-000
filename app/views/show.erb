<h1><%= @recipe.name %></h1>

<p>
  Ingredients: <%= @recipe.ingredients %>
</p>

<h3>Cook Time: <%= @recipe.cook_time %></h3>


<form method="post" action="/recipes/<%= @recipe.id %>/delete">

<input id="hidden" type="hidden" name="_method" value="delete">

<input type="submit" value="delete">

</form>

<form method="get" action="/recipes/<%= @recipe.id %>/edit">

<input id="hidden" type="hidden" name="_method" value="edit">

<input type="submit" value="edit">

</form>

<h3><a href="/recipes">Return to list</a></h3>
<br>
