
<h1><%= @recipe.name %></h1>
<h3>Ingredients:<%= @recipe.ingredients %> </h3>
<h3>Cook Time: <%= @recipe.cook_time %> </h3>

<form action="/recipes/<%= @recipe.id %>/edit" method="get">
  <input type="submit" name="edit" value="Edit Recipe">
</form>

<form action="/recipes/<%= @recipe.id %>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" id="delete" value="Delete Recipe">
</form>
