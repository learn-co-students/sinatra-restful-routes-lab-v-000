<% require 'pry' %>
<h1> Recipe Name : <%= @recipe.name %> </h1>
<p> Recipe Ingredients : <%= @recipe.ingredients %> </p>
<p> Recipe Cooking Time : <%= @recipe.cook_time %> </p>

<%#binding.pry%>

<form action="/recipes/<%= @recipe.id %>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="delete">
</form>
