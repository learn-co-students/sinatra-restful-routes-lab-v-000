<!DOCTYPE html>
<html>
  <head>Show.erb</head>
  <body>
    <h1><%= @recipe.name %></h1>
    <p><%= @recipe.ingredients %></p>
    <p><%= "#{@recipe.cook_time.to_i} minutes"%></p>

    <form method="post" action="/recipes/<%= @recipe.id %>/delete">
      <input id="hidden" type="hidden" name="_method" value="delete">
      <input type="submit" value="delete">
    </form>
  </body>

</html>
