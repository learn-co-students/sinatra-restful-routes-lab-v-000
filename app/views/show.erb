<h1><%= @recipe.name %></h1>
<h3>Ingredients:</h3>
<p><%= @recipe.ingredients %></p>
<h3>Cooking Time:</h3>
<p><%= @recipe.cook_time %></p>

<form method="POST" action="/recipes/<%= @recipe.id %>/delete">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" id="delete" value="Delete this recipe">
</form>