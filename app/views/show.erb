<!DOCTYPE html>
<html>
  <head>
    <title>Recipe</title>
  </head>
  <body>
    <h1><%= @recipe.name %></h1>
    <p><%= @recipe.ingredients %></p>
    <p><%= @recipe.cook_time %></p>
    <form action="/recipes/<%= @recipe.id %>" method="POST">
      <input type="hidden" id="hidden" name="_method" value="delete">
      <button type="submit" value="delete">Delete</button>
    </form>
  </body>
</html>
