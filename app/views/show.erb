


<h2> <%= @recipe.name %></h2>

<h2> <%= @recipe.ingredients %></h2>

<h2> <%= @recipe.cook_time %> minutes</h2>


<a href="/recipes/<%=@recipe.id%>/delete">Click to Delete Recipe</a>


<form action="/recipes/<%=@recipe.id%>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="text" name="name">
  <input type="text" name="ingredients">
  <input type="text" name="cook_time">
  <input type="submit" value="submit" id="delete">
</form>
