<form action="/recipes/<%= @recipe.id %>" method="POST">
  <%= @recipe.name %>
  <br>
  <%= @recipe.ingredients %>
  <br>
  <%= @recipe.cook_time %>
  <br>
  <label for="POST-name">Name:</label>
  <input id="recipe_name" type="text" name="name">
   <br>
  <label for="POST-ingredients">Ingredients:</label>
  <input id="ingredients_names" type="text" name="ingredients">
  <br>
  <label for="POST-cook_time">Cook Time:</label>
  <input id="cook_time" type="text" name="cook_time">
  <br>
  <input id="hidden" type="hidden" name="_method" value="patch">
  <button type="submit" value="submit">submit</button>
</form>
