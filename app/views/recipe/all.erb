<h1>All Recipes!</h1>

<% @recipes.each do |recipe| %>
    <div>
        <a href="/recipes/<%= recipe.id %>"><h3><%= recipe.name %></h3></a>
        <ol>
            <% recipe.ingredients.split(", ").each do |item| %>
              <li><%= item %></li>
            <% end %>
        </ol>
        <p>Cook Time: <%= recipe.cook_time %></p>
    </div>
<% end %>