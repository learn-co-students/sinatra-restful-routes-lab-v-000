<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Recipes</title>
  </head>
  <body>
    <% @recipes.each do |recipe| %>
      <h2>Recipe No. <%= recipe.id %></h2>
      <a href="/recipes/<%= recipe.id %>">Link to <%= recipe.name %></a><br>
      Name: <%= recipe.name %><br>
      Ingredients: <%= recipe.ingredients %><br>
      Cook Time: <%= recipe.cook_time %><br>
      <form action="/recipes/<%= recipe.id %>/delete" method="post">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <input type="submit" value="delete">
      </form>
    <% end %>

  </body>
</html>
