<html>
  <head>
    <meta charset="UTF-8">
    <title>Recipe Index</title>
  </head>
  <body>
    <% @all_recipes.each do |recipe| %>
      <h2>Name: <%= recipe.name %></h2>
      <h2>Ingredients: <%= recipe.ingredients %></h2>
      <h2>Cook Time: <%= recipe.cook_time %></h2>
      <h2><a href="/recipes/<%="#{recipe.id}"%>">Recipe Card</h2>
      <br />
    <% end %>
  </body>
</html>
