<h1 align='center'>My Recipes</h1>
  <hr />
  <div class='menu' align='center'>
    My Recipes | <a href='/recipes/new'>Create a Recipe</a>
  </div><br>
  <div class='recipes' width=600px>
    <ol>
      <% @recipes.each do |recipe| %>
        <strong><li><a href='/recipes/<%= recipe.id %>'><%= recipe.name %></a></li></strong>
        <em><%= recipe.cook_time %></em>
        
          <ul>
            <% recipe.ingredients.split(",").each do |ingredient| %>

              <li><%= ingredient %></li>
            <% end %>
          </ul>
        <% end %>
      </ol>
  </div>
