<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Recipes</title>
  </head>
  <body>
    <h1>Recipes</h1>
    <% @recipes.each do |recipe| %>
      <ul>
        <li><%= recipe.name %></li>
        <li><%= recipe.ingredients %></li>
        <li><%= recipe.cook_time %></li>
        <a href="/recipes/<%= recipe.id %>"></a>
      </ul>
    <% end %>
  </body>
</html>
