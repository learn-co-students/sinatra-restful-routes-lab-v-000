<form action="/recipes/<%= @recipe.id %>/edit" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Name: <input type="text" name="name" value="<%= @recipe.name %>"></p>
  <p>Ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></p>
  <p>Cook Time (minutes): <input type="text" name="cook_time" value="<%= @recipe.cook_time %>"></p>
  <input id="submit" type="submit" value="Edit">
</form>

<a href="/recipes/<%= @recipe.id %>">Back to Recipe</a>

