

 <form  action="/recipes/<%= @recipe.id %>/edit" method="post">
   <input id="hidden" type="hidden" name="_method" value="patch">
   <br>
   <label for="name">Name:</label>
   <input type="text" name="name" value="<%=@recipe.name%>" id="name">
   <br>
   <label for="ingredients">Ingredients:</label>
   <input type="text" name="ingredients" value="<%= @recipe.ingredients %>" maxlength='60' size="60" id="ingredients">
   <br>
   <label for="cook_time">Cook Time:</label>
   <input type="text" name="cook_time" value="<%=@recipe.cook_time%>" id="cook_time">
   <br>
   <input type="submit" name="submit" value="submit" id="submit">
 </form>
