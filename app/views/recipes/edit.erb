<form method="post" action="/recipes/<%= @recipe.id %>">
 <input id="hidden" type="hidden" name="_method" value="patch"> 
  <p>Recipe Name: <input type="text" name="name" value="<%= @recipe.name %>"></p>
  <p>Recipe Ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></p>
  <p>Cook Time: <input type="text" name="cook_time" value="<%= @recipe.cook_time %>"></p>
  <p><input type="submit" value="submit" name="submit"></p>
</form>