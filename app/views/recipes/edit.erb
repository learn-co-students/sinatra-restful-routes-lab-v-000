<h1>Edit Your Recipe:</h1>
<h2><%= @recipe.name %></h2>
<h3>Ingredients: </h3>
<p><%= @recipe.ingredients %></p>
<h3>Cook Time: </h3>
<p><%= @recipe.cook_time %></p>
<form method="post" action="/recipes/<%= @recipe.id %>">
	<input id="hidden" type="hidden" name="_method" value="patch">
	<p><input type='text' name='name' id='recipe_name' placeholder='Recipe Name:'></p>
	<p><textarea name='ingredients' id='ingredients_names' placeholder='Ingredients:'></textarea></p>
	<p><input type='text' name='cook_time' id='cook_time' placeholder='Cook Time:'></p>
	<input type='submit' id='submit' >
</form>