<style media="screen">
  label {
    margin-top: 1em;
    display: block;
  }
</style>

<h2>New Recipe</h2>

<form method="POST" action="/recipes">
  <label for="name">Name: </label>
  <input type="text" name="name" id="name">

  <p><label for="ingredients">Ingredients: </label>
  <textarea id="ingredients" value="ingredients" name="ingredients"></textarea>

  <p><label for="cook_time">Cook Time: </label>
  <input type="number" name="cook_time" id="cook_time">

  <p><input type="submit" value="Submit">
</form>
